<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/Theme.MyApplication.Ripple"
    android:background="?selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/keyword_img"
            android:layout_alignParentLeft="true"
            android:layout_marginVertical="10dp"
            android:layout_marginRight="13dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/style_round_rectangle"
            android:backgroundTint="@android:color/transparent"
            />

        <TextView
            android:id="@+id/text_keyword_only"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="나연 팀원님 나연이 잘 부탁드려요 ㅎㅎ 키워드 이름 "
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:ellipsize="end"
            android:textColor="@color/text_main"
            android:textStyle="bold"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/keyword_img"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


















