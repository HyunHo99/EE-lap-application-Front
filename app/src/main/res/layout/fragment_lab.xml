<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/fragname"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/gray_icon"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/fragname"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:text="연구실"
        />
    <androidx.appcompat.widget.AppCompatImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fragname"
        android:background="@drawable/ic_baseline_search_24"
        android:backgroundTint="@color/gray_icon"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragname"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="연구실 파도타기"
                android:layout_marginHorizontal="16dp"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginVertical="16dp"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        android:layout_marginLeft="16dp"
                        android:background="@drawable/style_round_rectangle"
                        android:elevation="0dp"
                        android:padding="0dp"></androidx.appcompat.widget.AppCompatButton>
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        android:layout_marginLeft="16dp"
                        android:background="@drawable/style_round_rectangle"
                        android:elevation="0dp"
                        android:padding="0dp"></androidx.appcompat.widget.AppCompatButton>
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        android:layout_marginLeft="16dp"
                        android:background="@drawable/style_round_rectangle"
                        android:elevation="0dp"
                        android:padding="0dp"></androidx.appcompat.widget.AppCompatButton>
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        android:layout_marginLeft="16dp"
                        android:background="@drawable/style_round_rectangle"
                        android:elevation="0dp"
                        android:padding="0dp"></androidx.appcompat.widget.AppCompatButton>
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        android:layout_marginLeft="16dp"
                        android:background="@drawable/style_round_rectangle"
                        android:elevation="0dp"
                        android:padding="0dp"></androidx.appcompat.widget.AppCompatButton>
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        android:layout_marginLeft="16dp"
                        android:background="@drawable/style_round_rectangle"
                        android:elevation="0dp"
                        android:padding="0dp"></androidx.appcompat.widget.AppCompatButton>

                </LinearLayout>

            </ScrollView>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@color/back_bar" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="관심"
                android:layout_marginHorizontal="16dp"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginVertical="16dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_height="match_parent"/>


        </LinearLayout>


















    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>